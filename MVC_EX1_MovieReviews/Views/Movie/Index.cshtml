@model List<IndexMovieViewModel>

@{

    ViewBag.Title = "Index";
}

@section scripts {
    <script src="~/Scripts/indexmovie.js" type="text/javascript"></script>
}

<h2>List of Moveiws</h2>

<a class="btn btn-primary" href="@Url.Action("Create", "Movie")">Create New Movie</a>

@if (!Model.Any())

{
    <div style="margin-top:15px;">
        <p><strong>You have no movie review</strong></p>
    </div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Movie Name</th>
                <th>Rating</th>
                <th>Category</th>
                <th>Edit</th>
                <th>Delete</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var element in Model)
            {
                <tr>
                    <td>@element.Id</td>
                    <td>@element.Name</td>
                    <td>@element.Rating</td>
                    <td>@element.Category</td>
                    <td>
                        <a href="@Url.Action("Edit", "Movie", new { id=element.Id })">Edit</a>
                    </td>
                    <td>
                        <form method="post" action="@Url.Action("Delete", "Movie", new { id = element.Id })">
                            <a href="#" class="btn-delete">Delete</a>
                        </form>
                    </td>


                </tr>
            }
        </tbody>


    </table>
}
