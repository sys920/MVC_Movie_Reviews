@model IndexMovieViewModel

@{
    ViewBag.Title = "Edit";
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<h2>Movie Review Edit</h2>

@using (Html.BeginForm())
{
    <form method="post">

        <div class="form-group">            
            @Html.LabelFor(Model => Model.Name, "Movie Name :")
            @Html.EditorFor(Model => Model.Name, new { htmlAttributes = new { @class = "form-control" } })
            <div class="text-danger">
                @Html.ValidationMessageFor(Model => Model.Name)
            </div>

        </div>
        <div class="form-group">
            @Html.LabelFor(Model => Model.Rating, "Raing:")
            <div>
                <label class="radio-inline">
                    @Html.RadioButtonFor(Model => Model.Rating, "1") 1

                </label>
                <label class="radio-inline">
                    @Html.RadioButtonFor(Model => Model.Rating, "2") 2
                </label>
                <label class="radio-inline">
                    @Html.RadioButtonFor(Model => Model.Rating, "3") 3
                </label>
                <label class="radio-inline">
                    @Html.RadioButtonFor(Model => Model.Rating, "4") 4
                </label>
                <label class="radio-inline">
                    @Html.RadioButtonFor(Model => Model.Rating, "5") 5
                </label>

            </div>
            <div class="text-danger">
                @Html.ValidationMessageFor(Model => Model.Rating)
            </div>

        </div>
        <div class="form-group">
           @Html.LabelFor(Model => Model.Category,"Category:")
           @Html.DropDownListFor(Model => Model.Category,
                            (SelectList)ViewBag.Categories,
                             "- Please Select -", 
                             new { @class = "form-control" }
                             )

        </div>
        <div class="text-danger">
            @Html.ValidationMessageFor(Model => Model.Category)
        </div>

        <button type="submit" class="btn btn-default">Update</button>
    </form>

}

